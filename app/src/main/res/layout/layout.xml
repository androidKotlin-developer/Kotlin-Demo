<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40ssp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txt_symbol"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10ssp"
                        android:paddingLeft="@dimen/_5ssp"
                        android:paddingRight="@dimen/_5ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="symbol"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"/>

                    <TextView
                        android:id="@+id/txt_quoteasset"
                        android:textSize="@dimen/_8ssp"
                        android:textAllCaps="true"
                        android:paddingLeft="@dimen/_5ssp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="quoteAsset"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_volume"
                    android:textSize="@dimen/_12ssp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="volume"
                    android:paddingLeft="@dimen/_5ssp"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txt_highprice"
                        android:textStyle="bold"
                        android:textColor="@color/green"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highprice"/>

                    <TextView
                        android:id="@+id/txt_lowprice"
                        android:textStyle="bold"
                        android:textColor="@color/red"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lowprice"/>

                </LinearLayout>

                <TextView

                    android:id="@+id/txt_lastprice"
                    android:layout_marginTop="@dimen/_10ssp"
                    android:layout_marginBottom="@dimen/_10ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/round_corner"
                    android:gravity="center"
                    android:layout_width="@dimen/_45ssp"
                    android:layout_height="@dimen/_20ssp"
                    android:text="last price"/>


            </LinearLayout>




        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>